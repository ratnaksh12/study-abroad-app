generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model University {
  id                    String   @id
  name                  String
  country               String
  location              String
  rankingQS             Int?
  rankingTHE            Int?
  programs              String[]
  acceptanceRate        String
  tuitionUSD            Int
  internationalStudents String
  website               String

  // Relations
  userShortlists UserUniversity[]
}

model User {
  id              String   @id // Firebase UID or local_[hash]
  email           String   @unique
  name            String?
  password        String?  // For email/password auth (null for Google users)
  profileComplete Boolean  @default(false)
  stage           String   @default("profile")
  chatHistory     String?  // Store chat messages as JSON string
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Profile data
  profile Profile?

  // Relationships
  shortlistedUnis UserUniversity[]
  tasks           Task[]
}

model Profile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Academic Background
  educationLevel String?
  degreeMajor    String?
  graduationYear String?
  gpa            String?

  // Study Goals
  intendedDegree     String?
  fieldOfStudy       String?
  intakeYear         String?
  intakeSeason       String?
  preferredCountries String[]

  // Budget
  budgetRange String?
  fundingPlan String[]

  // Exams & Readiness
  englishTest       String?
  englishScore      String?
  standardizedTest  String?
  standardizedScore String?
  sopStatus         String?
}

model UserUniversity {
  id           String     @id @default(cuid())
  userId       String
  universityId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  university   University @relation(fields: [universityId], references: [id], onDelete: Cascade)

  isLocked Boolean  @default(false)
  addedAt  DateTime @default(now())

  @@unique([userId, universityId])
}

model Task {
  id     String @id // Using existing task IDs from frontend
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  description String?
  priority    String   @default("medium")
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
